import { Component, OnInit } from '@angular/core';
import { WelcomeService, DataService } from '../_services';
import { Router, ActivatedRoute } from '@angular/router';
import { FormBuilder, FormGroup, Validators } from '@angular/forms';

@Component({
  selector: 'app-welcome',
  templateUrl: './welcome.component.html',
  styleUrls: ['./welcome.component.css']
})

export class WelcomeComponent implements OnInit {

  domains:any;
  countries:any;
  profiles:any;
  currentUser:any;
  welcomeForm: FormGroup;
  formData:any;

  constructor (
    private welcomeService:WelcomeService,
    private dataService : DataService,
    private route: ActivatedRoute,
    private router: Router,
    private formBuilder: FormBuilder,
  ) { }

  ngOnInit() {

    this.currentUser = this.welcomeService.getCurrentUser();
    console.log(this.currentUser);

    /*form validation*/
    this.welcomeForm = this.formBuilder.group({
      country: [null, Validators.required],
      profile: [null, Validators.required],
      domain:[null],
    });

    this.optionalValidator();

    /*listen to domains*/
    this.welcomeService
      .getDomains()
      .subscribe((data: any) => {
        this.domains = data;
    });

    /*listen to countries*/
    this.welcomeService
      .getCountries()
      .subscribe((data: any) => {
        this.countries = data;
    });

    /*listen to profiles*/
    this.welcomeService
      .getServiceProfiles()
      .subscribe((data: any) => {
        this.profiles = data;
    });
  }

  optionalValidator() {
    if(this.currentUser.role == 'external') {
      const domainControl = this.welcomeForm.get('domain');
      domainControl.setValidators([Validators.required]);
    }
  }

  onSubmit() {
    // stop here if form is invalid
    console.log(this.welcomeForm.controls);
    let formData = {
      domain: this.welcomeForm.controls.domain.value,
      country: this.welcomeForm.controls.country.value,
      profile: this.welcomeForm.controls.profile.value,
    }
    if (!this.welcomeForm.valid) {
      return;
    } else {
      this.dataService.setUserData(formData);
      this.router.navigate(['newnumber']);
    }
  }
}
