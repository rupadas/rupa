    <div class="col-md-12">
      <div class="white-box toggle-wrapper">
        <span class="switcher switcher-1">
          <input type="checkbox" id="switcher-1">
          <label for="switcher-1"></label>
        </span>
      </div>
    </div>
    <div class="col-md-12">
      <div class="white-box map-wrapper">
        <div #map id="map" style="width:100%;height:250px;" *ngIf="userData.country =='FR' || userData.country == 'GB' "></div>
        <div class="telephone-wrapper">
          <div class="service-label">
            <h5 class="number-title">What type of numbers do you need?</h5>
          </div>
          <select class="form-control telephone-select" name="telephone" (change)="numberChange($event)">
           <option value="">Please select</option>
           <option *ngFor="let number of ['1-9', '10-100', '100-900']">{{number}}</option>
          </select>
          <div class="co-nubmber-info">
            <span class=""><img src="assets/images/info-icon.svg"></span>
            <span class="co-number-text">You will get X=X*10 numbers for eg 50=5*10</span>
          </div>
        </div>
        <div class="btn-group pull-right">
          <button class="btn btn-light next-btn" type="button" [disabled]='buttonDisable' [ngClass]="!buttonDisable ? 'active' : ''" (click)="next()">Next</button>
        </div>
      </div>
    </div>
